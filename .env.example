# FreeAgent OAuth2 credentials
FREEAGENT_CLIENT_ID=your_client_id_here
FREEAGENT_CLIENT_SECRET=your_client_secret_here
FREEAGENT_REDIRECT_URI=http://localhost:3000/callback

# Environment: sandbox (default) or production
FREEAGENT_ENVIRONMENT=sandbox

# Optional: encryption key for persistent token storage (64 hex characters = 32 bytes)
# Generate with: openssl rand -hex 32
TOKEN_ENCRYPTION_KEY=

# Server configuration
PORT=3000
LOG_LEVEL=info
